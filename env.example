# AWS Configuration
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_DEFAULT_REGION=us-east-1

# API Keys for Data Sources
NEWS_API_KEY=your_news_api_key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
POLYGON_API_KEY=your_polygon_api_key

# Database Configuration
REDSHIFT_HOST=your_redshift_cluster_endpoint
REDSHIFT_PORT=5439
REDSHIFT_DATABASE=your_database_name
REDSHIFT_USERNAME=your_username
REDSHIFT_PASSWORD=your_password
POSTGRES_DB=airflow
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
DATABASE_URL=postgresql://postgres:password@postgres:5432/financial_sentiment

# S3 Configuration
S3_BUCKET_NAME=your-data-lake-bucket
S3_RAW_PREFIX=raw/
S3_PROCESSED_PREFIX=processed/

# Kinesis Configuration
KINESIS_STREAM_NAME=financial-data-stream
KINESIS_SHARD_COUNT=1

# Lambda Configuration
LAMBDA_FUNCTION_NAME=financial-data-processor
LAMBDA_TIMEOUT=300
LAMBDA_MEMORY_SIZE=512

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000/ws
VITE_API_URL=http://localhost:8000
VITE_AIRFLOW_URL=http://localhost:8080

# dbt Configuration
DBT_PROJECT_NAME=financial_sentiment
DBT_PROFILE_NAME=financial_sentiment
REDSHIFT_HOST=your_redshift_cluster_endpoint
REDSHIFT_USER=your_redshift_username
REDSHIFT_PASSWORD=your_redshift_password
REDSHIFT_PORT=5439
REDSHIFT_DBNAME=dev
REDSHIFT_MASTER_PASSWORD=your_redshift_master_password

# Airflow Configuration
AIRFLOW_HOME=/opt/airflow
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__SQL_ALCHEMY_CONN=sqlite:////opt/airflow/airflow.db
AIRFLOW_UID=50000
AIRFLOW_PROJ_DIR=.
AIRFLOW_IMAGE_NAME=apache/airflow:2.8.3

# Monitoring Configuration
CLOUDWATCH_LOG_GROUP=/aws/lambda/financial-data-processor
SNS_TOPIC_ARN=arn:aws:sns:us-east-1:123456789012:financial-alerts

# Redis Configuration
REDIS_URL=redis://redis:6379

# Data Pipeline Configuration
DATA_DIR=./data
LOGS_DIR=./logs 